
<!-- Displaying the errors / Validation on the screen (Because it's the templet & its require to render the errors to communicate with the controller) -->
<% if @article.errors.any? %>
<p> Error due to :- </p>
<ul>
<% @article.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<%end%>
</ul>
<%end%>


<div class='row'>
  <div class='col-xs-12'>

    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>      
     <!-- Creating Title name and field box --> 
      <div class="form-group">
        <div class="control-label col-sm-2">
         <%= f.label :title, "Title" %>
         </div>
         <div class="col-sm-8">
         <%= f.text_field :title, class: "form-control", placeholder: "Title of articles", autofocus: true %>
         </div>
         </div>


    <!-- Creating the Desription Box (Lable + Text Area) -->
      <div class="form-group">
        <div class="control-label col-sm-2">
         <%= f.label :description %>
        </div>
       <div class="col-sm-8">
         <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
       </div>
      </div>


      
      <!-- Creating the new article button (Creat Article) -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
         <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
       </div>

      <%end%>
    <div class="col-xs-offset-4 col-xs-4">
       | <%= link_to "Cancel request and return to article listing", articles_path%> |
     </div>

  </div>
</div>

     