
 <h1 align="center"> Create New User </h1> <br></br>


<%= render 'shared/errors', obj: @user %>


 
<div class='row'>
  <div class='col-xs-12'>

    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>      
     <!-- Creating Username and Username field --> 
      <div class="form-group">
        <div class="control-label col-sm-2">
         <%= f.label :username, "User Name" %>
         </div>
         <div class="col-sm-8">
         <%= f.text_field :username, class: "form-control", placeholder: "Enter User Name", autofocus: true %>
         </div>
         </div>




    <!-- Creating the Email field (Lable + field Area) -->
      <div class="form-group">
        <div class="control-label col-sm-2">
         <%= f.label :email %>
        </div>
       <div class="col-sm-8">
         <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
       </div>
      </div>


 <!-- Creating the Password field (Lable + field Area) -->
      <div class="form-group">
        <div class="control-label col-sm-2">
         <%= f.label :password %>
        </div>
       <div class="col-sm-8">
         <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
       </div>
      </div>

      
      <!-- Creating the new article button (Creat Article) -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
         <%= f.submit "Signup", class: 'btn btn-primary btn-lg' %>
        </div>
       </div>

      <%end%>
    <div class="col-xs-offset-4 col-xs-4">
       | <%= link_to "Cancel request and return to article listing", articles_path%> |
     </div>

  </div>
</div>

     